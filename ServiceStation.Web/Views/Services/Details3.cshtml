@using Microsoft.Extensions.Configuration;
@inject IConfiguration Configuration;

<h1>@Configuration["Page:Header:Title"]</h1>
<h4>@Configuration["Page:Header:Subtitle"]</h4>

<table class="table">
	<thead>
		<tr>
			<th>Service Name</th>
			<th>Service Description</th>
			<th>Service Price</th>
		</tr>
	</thead>
	<tr>
		<td>@ViewBag.Service.Title</td>
		<td>@ViewBag.Service.Description</td>
		<td>@ViewBag.Service.Cost</td>
	</tr>
</table>


